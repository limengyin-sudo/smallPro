.nav{
    display: flex;
    margin: 20rpx;
    justify-content: space-between;
}
.title{
    font-size: 32rpx;
    color: #333;
}
.more{
    font-size: 30rpx;
    color: #333;
}
.container{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 20rpx;
}
.item{
    width: 200rpx;
    position: relative;
    font-size: 30rpx;
    border: 1px solid #e0e0e0;
}
.playNum{
    position: absolute;
    width: 200rpx;
    height: 50rpx;
    background-color: rgba(0,0,0,.7);
    display: flex;
    align-items: center;
}
.listenIcon{
    width: 40rpx;
    height: 40rpx;
    margin-left: 36rpx;
}
.playCount{
    font-size: 28rpx;
    color: #fff;
}
.album{
    width: 200rpx;
    height: 200rpx;
}
.name{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}