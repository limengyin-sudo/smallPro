.container{
    width: 100%;
    position: relative;
}
.cover{
    width: 100%;
    height: 400rpx;
}
.play{
    width: 90rpx;
    height: 90rpx;
    position: absolute;
    top: 160rpx;
    left: 50%;
    transform: translateX(-50%);
}
.detail{
    display: flex;
    align-items: center;
    color: #333;
}
.detail>image{
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx;
}
.author{
    color: #333;
    margin-right: 20rpx;
}
.dateTime{
    color: #333;
}
.title{
    font-size: 40rpx;
    color: #333;
    font-weight: bold;
    padding: 20rpx;
}
.collect-share{
    position: absolute;
    right: 20rpx;
}
.collect-share>image{
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx;
}
.content{
   padding: 20rpx;
   color: #333;
   font-size: 32rpx;
   line-height: 64rpx;
   margin-top: 120rpx;
}